{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <a href="{{ path("admin_user_create") }}" class="btn btn-success">Yangi</a>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <td>ID</td>
            <td>Email</td>
            <td>Role</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | json_encode }}</td>
                <td>
                    <a href="#" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                    <a href="#" class="btn btn-danger"><i class="fa fa-minus"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}